extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        include ./layout/bloque_testimoniales
        .row 
            .col-md-12
                h2.d-block.w-100.text-center Agrega un testimocial
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje 
            .row.justify-content-center.col     
                .col-md-8 
                    form(action="/testimoniales" method='POST')
                        .form-group
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="ej: Andres", name="nombre",class="form-control",value=nombre)
                        .form-group
                            label(for="email") Correo Electronico 
                            input#email(type="text", placeholder="correo@correo.com", name="email",class="form-control",value=email)
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(name="mensaje", placeholder="Tu mensaje", class="form-control", rows=3,)= mensaje 
                        input.btn.btn-success.btn-block(type="submit")